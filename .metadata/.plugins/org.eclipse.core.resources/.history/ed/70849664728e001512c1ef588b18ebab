			<script>
			$(document).ready(function(){
				$("h1").mousedown(function(){
					$("description").css("background-color", "lightgray");
					$( "h1" ).animate({
						height: "+=200"
					}, 1000, function() {});
					$( "description" ).animate({
						opacity: 1.0
					}, 1000, function() {});
				});
				$("h1").mouseup(function(){
					$("description").css("background-color", 'rgba(0,0,0,0)');
					$("description").css("opacity", 1.0);
					$( "h1" ).animate({
						height: "-=200"
					}, 1000, function() {});
					$( "description" ).animate({
						opacity: 0.0
					}, 1000, function() {});
				});
			});
			</script>
			
