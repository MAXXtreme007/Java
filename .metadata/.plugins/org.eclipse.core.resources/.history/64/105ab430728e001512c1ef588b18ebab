/*how to style a class*/
.formStyle {
    background-image: url(Flag.jpg); width: 100%; height: 50%; opacity: 0.6;
    background-size: cover;
}

.wrapper{
    display: inline;
    width:80%;
    margin:auto;
}

/*how to style an id*/
#title
{
    display: inline;
    color: black;
    font-size: 200%;
    text-align: center;
}

/*how to style a native HTML element*/
body
{
    background-image: url(Sky.jpg);
    background-size: cover;
    text-align: center;
}

#description
{
    opacity: 100.0;
    color: black;
    font-size: 120%;
    text-align: center;
}

#input
{
    color: white;
    font-size: 400%;
    text-align: center;
}

#boxes
{
    width: 220px;
    height: 70px;
    font-size: 50%;
    text-align: center;
}

#results
{
    color: black;
    font-size: 300%;
    text-align: center;
}